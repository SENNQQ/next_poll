{
  "name": "scint_ontu",
  "version": "0.0.2",
  "author": "Vitalii Kondratenko, Oleksandr Karatanas",
  "private": true,
  "scripts": {
    "dev": "npm-run-all --parallel dev:*",
    "dev:client": "pnpm --filter client run dev",
    "dev:server": "pnpm --filter server run start:dev",
    "build": "npm-run-all --parallel build:*",
    "build:client": "pnpm --filter client run build",
    "build:server": "pnpm --filter server run build",
    "start": "npm-run-all --parallel start:*",
    "start:client": "pnpm --filter client run start",
    "start:server": "pnpm --filter server run start:prod",
    "update-version": "npm --no-git-tag-version version patch"
  },
  "devDependencies": {
    "husky": "^9.0.11",
    "npm-run-all": "^4.1.5"
  }
}
