generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int    @id @default(autoincrement())
  email    String @unique
  name     String
  password String
}

// Конференції, семінари та конкурси
model Conference {
  id      String         @id @default(uuid())
  date    DateTime       @db.Timestamptz(3)
  type    ConferenceType
  country String
  title   String
  text    String
  files   String[]       @default([])

  createdAt DateTime @default(now()) @db.Timestamptz(3)
  updatedAt DateTime @updatedAt @db.Timestamptz(3)
}

// Наукові школи
model ScienceSchool {
  id    String @id @default(uuid())
  title String
  text  String

  createdAt DateTime @default(now()) @db.Timestamptz(3)
  updatedAt DateTime @updatedAt @db.Timestamptz(3)
}

// Напрямки для співпраці
model Cooperation {
  id    String @id @default(uuid())
  title String
  text  String

  createdAt DateTime @default(now()) @db.Timestamptz(3)
  updatedAt DateTime @updatedAt @db.Timestamptz(3)
}

// Наукова робота ОНТУ
model ResearchWork {
  id    String @id @default(uuid())
  title String
  text  String
  image String

  createdAt DateTime @default(now()) @db.Timestamptz(3)
  updatedAt DateTime @updatedAt @db.Timestamptz(3)
}

// Міжнародна діяльність ОНТУ
model Activity {
  id    String @id @default(uuid())
  title String
  text  String
  image String

  createdAt DateTime @default(now()) @db.Timestamptz(3)
  updatedAt DateTime @updatedAt @db.Timestamptz(3)
}

// Інноваційні розробки
model Innovation {
  id     String   @id @default(uuid())
  title  String
  text   String
  images String[] @default([])
  files  String[] @default([])

  createdAt DateTime @default(now()) @db.Timestamptz(3)
  updatedAt DateTime @updatedAt @db.Timestamptz(3)
}

// Студентська наука
model StudentScience {
  id   String @id @default(uuid())
  text String
}

// Міжнародні проекти
model InternationalProject {
  id     String   @id @default(uuid())
  title  String
  text   String
  images String[] @default([])
  files  String[] @default([])

  createdAt DateTime @default(now()) @db.Timestamptz(3)
  updatedAt DateTime @updatedAt @db.Timestamptz(3)
}

// Зворотній зв’язок
model Feedback {
  id    String @id @default(uuid())
  name  String
  email String
  text  String

  createdAt DateTime @default(now()) @db.Timestamptz(3)
}

enum ConferenceType {
  SEMINAR
  COMPETITION
  CONFERENCT
}
